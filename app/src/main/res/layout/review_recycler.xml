<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#fff"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="98dp"
                android:layout_height="76dp"
                android:layout_alignParentStart="true"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_review_date"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="4"
                android:textSize="@dimen/size_6" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:text="Rating"
                android:textSize="@dimen/size_7" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_11" />

        <TextView
            android:id="@+id/tv_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reviewer_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/bg_light_gray"
            android:textSize="@dimen/text_5" />

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rating_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/size_2"
            android:layout_marginTop="@dimen/size_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/bg_light_gray"
            android:textSize="@dimen/text_5" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>